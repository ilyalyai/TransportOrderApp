@page
@model TransportOrderApp.Pages.Orders.IndexModel
@{
    ViewData["Title"] = "Список заказов";
}

<h2>Список заказов</h2>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Город отправителя</th>
            <th>Адрес отправителя</th>
            <th>Город получателя</th>
            <th>Адрес получателя</th>
            <th>Вес груза (кг)</th>
            <th>Дата забора груза</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model.Orders)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.SenderCity</td>
                <td>@order.SenderAddress</td>
                <td>@order.ReceiverCity</td>
                <td>@order.ReceiverAddress</td>
                <td>@order.Weight</td>
                <td>@order.PickupDate.ToShortDateString()</td>
                <td><a asp-page="./Details" asp-route-id="@order.Id">Подробности</a></td>
            </tr>
        }
    </tbody>
</table>

<a asp-page="./Create" class="btn btn-primary">Создать новый заказ</a>