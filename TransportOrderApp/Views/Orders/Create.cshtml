@model TransportOrderApp.Models.Order
@Html.AntiForgeryToken()
@{
    ViewData["Title"] = "Создание заказа";
}

<h2>Создание нового заказа</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="SenderCity">Город отправителя</label>
        <input asp-for="SenderCity" class="form-control" />
        <span asp-validation-for="SenderCity" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="SenderAddress">Адрес отправителя</label>
        <input asp-for="SenderAddress" class="form-control" />
        <span asp-validation-for="SenderAddress" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ReceiverCity">Город получателя</label>
        <input asp-for="ReceiverCity" class="form-control" />
        <span asp-validation-for="ReceiverCity" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ReceiverAddress">Адрес получателя</label>
        <input asp-for="ReceiverAddress" class="form-control" />
        <span asp-validation-for="ReceiverAddress" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Weight">Вес груза (кг)</label>
        <input asp-for="Weight" class="form-control" />
        <span asp-validation-for="Weight" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PickupDate">Дата забора груза</label>
        <input asp-for="PickupDate" class="form-control" type="date" />
        <span asp-validation-for="PickupDate" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Создать</button>
</form>